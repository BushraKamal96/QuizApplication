<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/imagelog">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <de.hdodenhof.circleimageview.CircleImageView

            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/circleimage"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_alignStart="@+id/button4"
            android:layout_marginTop="20dp"
            android:src="@drawable/displaypic"
            app:civ_border_color="@color/colorAccent"
            app:civ_border_width="2dp"

            />

        <Button
            android:id="@+id/pickbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/circleimage"
            android:layout_below="@+id/circleimage"
            android:layout_marginEnd="56dp"

            android:text="pick image"
            android:textStyle="bold" />

        <Button
            android:id="@+id/capturebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/myname"
            android:layout_below="@+id/circleimage"
            android:layout_marginEnd="40dp"
            android:text="capture image"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/myname"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@+id/pickbutton"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:layout_margin="10dp"
            android:hint="Full Name"
            android:background="@drawable/edit_round"
            android:inputType="text"
            android:textSize="20sp"


            />

        <EditText
            android:id="@+id/myemail"
            android:background="@drawable/edit_round"
            android:drawableLeft="@drawable/ic_edit_black_24dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@+id/myname"
            android:layout_margin="10dp"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            android:textSize="20sp" />


        <EditText
            android:id="@+id/mypass"
            android:background="@drawable/edit_round"
            android:layout_width="match_parent"
            android:drawableLeft="@drawable/ic_https_black_24dp"
            android:layout_height="55dp"
            android:layout_below="@+id/myemail"
            android:layout_margin="15dp"
            android:hint="Password"
            android:inputType="numberPassword"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button4"
            android:background="@drawable/button_round"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mypass"
            android:layout_centerInParent="true"
            android:text="Sign in"
            android:textSize="25sp"


            />

    </RelativeLayout>


</LinearLayout>